        {
            holdingwep.bTHRUACTORS = false;
            holdingwep.bNOGRAVITY = false;
            holdingwep.A_ChangeVelocity(random(-1, 1), random(-1, 1), 3, CVF_RELATIVE|CVF_REPLACE);
